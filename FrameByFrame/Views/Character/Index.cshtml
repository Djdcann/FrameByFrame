@model FrameByFrame.Models.Character

@{
    ViewData["Title"] = "Character";
}

<h2>Character</h2>

<div>
    <h4>Character</h4>
    <hr />
    <dl class="dl-horizontal">
    </dl>
</div>
<div>
    @Model.Name
    <img src="@Model.getImagePath()" />
</div>
<table>
    <tr><th>Jumpsquat</th><td>@Model.Properties.Jumpsquat</td></tr>
    <tr><th>Dash</th><td>@Model.Properties.Dash</td></tr>
    <tr><th>Landlag</th><td>@Model.Properties.Landlag</td></tr>
    <tr><th>SHAirtime</th><td>@Model.Properties.SHAirtime</td></tr>
    <tr><th>FHAirtime</th><td>@Model.Properties.FHAirtime</td></tr>
    <tr><th>AirJumps</th><td>@Model.Properties.AirJumps</td></tr>
    <tr><th>Taunt Frames</th><td>@Model.Properties.Taunt</td></tr>
</table>
@{ 
    foreach(SmashAttack a in Model.Actions.Where(x => x.Type == ActionType.Smash)) // get all normal attacks
    {
        <div>@a.Name</div>
        <div>@a.ChargeFrame</div>

    }
}
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
<br/>
<div>@Model.getJson()</div>
